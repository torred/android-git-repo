<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.torredben.datasave">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".PersonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".KeySaveActivity"
            android:label="Key Save"/>

        <activity android:name=".FileSaveActivity"
            android:label="File Save"/>

        <activity android:name=".ExternalStorageActivity"
            android:label="External Storage Save"/>

        <activity android:name=".DatabaseActivity"
            android:label="Database Save">
        </activity>
    </application>

</manifest>